<script type="text/javascript">

    // onchange for selector
    var listData = []
    var listPieData = []
    var listAreaDataForSale = []
    var listProductNameInPieDataForSale = []
    var listProductAmountInPieDataForSale = []

    $(document).ready(function () {
        GetReportByYear();
    })


    $("#ddlYear").change(function () {
        GetReportByYear();
    });

    var GetReportByYear = function () {
        $.ajax({
            url: '@Url.Action("GetReportByYear","Salary")',
            type: 'GET',
            data: {
                year: $('#ddlYear').val(),
            },
            success: function (data) {
                console.log(`data: ${JSON.stringify(data)}`)
                var year = data.year
                listData = data.listTotalSalaryMonths
                listPieData = data.listReportDepartmentByYear
                listAreaDataForSale = data.listDataForReportSaleAreaByYear
                listProductNameInPieDataForSale = data.productNameList
                listProductAmountInPieDataForSale = data.amountProductList

                RegisterChart(listData)
                RegisterPieChart(listPieData)
                RegisterAreaChartForSale(listAreaDataForSale)
                RegisterPieChartForSale(listProductNameInPieDataForSale, listProductAmountInPieDataForSale)


                var revenueMonthly = 0
                var revenueAnnual = 0
                var salaryMonthly = 0
                var salarysAnnual = 0

                for (let i = 0; i < listData.length; i++) {
                    salarysAnnual += listData[i]
                }
                for (let i = 0; i < listAreaDataForSale.length; i++) {
                    revenueAnnual += listAreaDataForSale[i]
                }

                salaryMonthly = (salarysAnnual / 12).toFixed(2);
                revenueMonthly = (revenueAnnual / 12).toFixed(2);


                revenueMonthly = numeral(revenueMonthly).format('0,0.0')
                revenueAnnual = numeral(revenueAnnual).format('0,0.0')
                salaryMonthly = numeral(salaryMonthly).format('0,0.0')
                salarysAnnual = numeral(salarysAnnual).format('0,0.0')
              

                $("#RevenueMonthly").html(`<div id="RevenueMonthly" class="h5 mb-0 font-weight-bold text-gray-800">$ ${revenueMonthly}</div>`)
                $("#RevenueAnnual").html(`<div id="RevenueAnnual" class="h5 mb-0 font-weight-bold text-gray-800">$ ${revenueAnnual}</div>`)
