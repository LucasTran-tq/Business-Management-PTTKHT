@model App.Areas.EmployeeManagement.Models.Employee_Position

<link href="/css/detail-profile.css" type="text/css" rel="stylesheet" />

<partial name="SBAdmin/_Styles" />
<div class="row">
    <div class="col-md-6 bg-white mx-5 rounded shadow-lg">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
             <div class="information-title mx-5"><p>Edit Employee Position</p></div>
            <div class="form-group mx-5 float-right mt-n5">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            <hr>
            <div class="information-group row">
                <div class="information-group1">
                    <div class="form-group mx-5">
                        <label asp-for="EmployeeId" class="control-label"></label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                    <div class="form-group mx-5">
                        <label asp-for="PositionId" class="control-label"></label>
                        <select asp-for="PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                        <span asp-validation-for="PositionId" class="text-danger"></span>
                    </div>
                   
                </div>
               <div class="information-group2">
                     <div class="form-group mx-5">
                        <label asp-for="StartTime" class="control-label"></label>
                        <input asp-for="StartTime" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group mx-5">
                        <label asp-for="EndTime" class="control-label"></label>
                        <input asp-for="EndTime" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mx-5 mb-4 content-information mt-5">
    <a asp-action="Index">
        <i class="far fa-arrow-alt-circle-left"></i>
        Back
    </a>
</div>

