@model App.Areas.EmployeeManagement.Models.Employee

<link href="/css/detail-profile.css" type="text/css" rel="stylesheet" />

<partial name="SBAdmin/_Styles" />


<h3 class="mx-5">Are you sure you want to delete this Employee?</h3>
 <form asp-action="Delete" >
        <input type="hidden" asp-for="EmployeeId" />
        <input type="submit" value="Delete" class="btn btn-danger mx-5" />
    </form>
<div class="mx-5">
    <div class="col-md-10 bg-white rounded shadow-lg">
        <div class="information-group mt-3">
            <div class="information-group1">
                <dl class="col mx-5">
                    <dt class = "row-sm-2 title-text">
                        @Html.DisplayNameFor(model => model.EmployeeName)
                    </dt>
                    <dd class = "row-sm-10 content-information">
                        @Html.DisplayFor(model => model.EmployeeName)
                    </dd>
                    <dt class = "row-sm-2 title-text">
                        @Html.DisplayNameFor(model => model.Department.DepartmentName)
                    </dt>
                    <dd class = "row-sm-10 content-information">
                        @Html.DisplayFor(model => model.Department.DepartmentName)
                    </dd>
                    <dt class = "row-sm-2 title-text">
                        @Html.DisplayNameFor(model => model.Level.LevelName)
                    </dt>
                    <dd class = "row-sm-10 content-information">
                        @Html.DisplayFor(model => model.Level.LevelName)
                    </dd>
                    <dt class = "row-sm-2 title-text">
                        @Html.DisplayNameFor(model => model.DOB)
                    </dt>
                    <dd class = "row-sm-10 content-information">
                        @* @Html.DisplayFor(model => model.DOB) *@
                        @Convert.ToDateTime(Model.DOB).ToString("dd/MM/yyyy")
                    </dd>
                    <dt class = "row-sm-2 title-text">
                        @Html.DisplayNameFor(model => model.Sex)
                    </dt>
                    <dd class = "row-sm-10 content-information">
                        @Html.DisplayFor(model => model.Sex)
                    </dd>
                    <dt class = "row-sm-2 title-text">
                        @Html.DisplayNameFor(model => model.PlaceOfBirth)
                    </dt>
                    <dd class = "row-sm-10 content-information">
                        @Html.DisplayFor(model => model.PlaceOfBirth)
                    </dd>
                    <dt class = "row-sm-2 title-text">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class = "row-sm-10 content-information">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                  
                </dl>
            </div>
            <div class="information-group2">
              
                    <dd class = "row-sm-10 content-information mt-5">
                        <img src="@(Model.ImageByte == null ? "/img/defaultAvatar.jpg" : string.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.ImageByte)))"
                                id="imagePreview" alt="DefaultAvatar" style="max-width: 200px; max-height: 200px; border-radius: 50%;">
                    </dd>
            </div>
        </div>
    </div>
</div>
<div class="mx-5 mb-4 content-information mt-5">
    <a asp-action="Index">
        <i class="far fa-arrow-alt-circle-left"></i>
        Back
    </a>
</div>
