@* @using AppMvc.Areas.SaleManagement.Controllers.TopProduct *@
@model IEnumerable<App.Areas.SaleManagement.Models.TopProduct>


<link href="/vendor/datatables/dataTables.bootstrap4.min.css" type="text/css" rel="stylesheet">


<partial name="_AlertCreateMessage" />
<partial name="_AlertDeleteMessage" />

<div class="card shadow mx-5 mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Top Product</h6>
        
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered dataTable" id="dataTable" role="grid"
                            aria-describedby="dataTable_info" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ProductName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Amount)
                                    </th>
                                     <th>
                                        @Html.DisplayNameFor(model => model.ProductPrice)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SupplierName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ProductTypeName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BillDate)
                                    </th>

                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Amount)
                                        </td>
                                         <td>
                                            @Html.DisplayFor(modelItem => item.ProductPrice) $
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SupplierName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProductTypeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BillDate)
                                        </td>

                                        @* <td>
                                             <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a> 
                                            </td> *@
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.ProductName)</th>
                                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.Amount)</th>
                                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.ProductPrice)</th>
                                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model =>model.SupplierName)</th>
                                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.ProductTypeName)</th>
                                    <th rowspan="1" colspan="1">@Html.DisplayNameFor(model => model.BillDate)</th>
                                   
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript-->
<script src="/vendor/jquery/jquery.min.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="/js/sb-admin-2.min.js"></script>

<!-- Page level plugins -->
<script src="/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

