@model SetUserPasswordModel
@{
    ViewData["Title"] = "Đặt mật khẩu";
}

<h4 class="ml-5">Set password for members: @ViewBag.user.UserName</h4>
<partial name="_StatusMessage" />


<div class="mx-5">
    <div class="col-md-6 bg-white rounded shadow-lg">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mx-5">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group mx-5">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
          
            <button type="submit" class="btn btn-primary my-4 ml-5">Set password</button>
            <a class="btn btn-primary my-4" asp-action="Index">Members list</a>
          
        </form>
    </div>
</div>
<div class="mx-5 mb-4 content-information mt-5">
    <a asp-action="Index">
        <i class="far fa-arrow-alt-circle-left"></i>
        Back
    </a>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
