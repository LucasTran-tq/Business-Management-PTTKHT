@model EditClaimModel
@{
    ViewData["Title"] = "Assign properties to roles";
}
<h2 class="mx-5">@ViewData["Title"]: @Model.role.Name</h2>
<partial name="_StatusMessage"></partial>

<hr>

<div class="mx-5">
    <div class="col-md-6 bg-white rounded shadow-lg">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mx-5">
                <label asp-for="ClaimType" class="control-label"></label>
                <input asp-for="ClaimType" class="form-control" />
                <span asp-validation-for="ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group mx-5">
                <label asp-for="ClaimValue" class="control-label"></label>
                <input asp-for="ClaimValue" class="form-control" />
                <span asp-validation-for="ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group mx-5">
                <input type="submit" value="Update" class="btn btn-primary" />
                <input type="submit" asp-action="DeleteClaim" asp-route-claimid="@ViewBag.claimid"  value="Delete" class="btn btn-danger" />
                <a class="btn btn-primary" asp-action="Edit" asp-route-roleid="@Model.role.Id">Edit role</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

