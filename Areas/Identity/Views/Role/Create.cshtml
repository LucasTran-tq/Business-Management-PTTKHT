@model CreateRoleModel
@{
    ViewData["Title"] = "Create a new role";
}
<h2 class="mx-5">@ViewData["Title"]</h2>
<partial name="_StatusMessage"></partial>



<div class="mx-5">
    <div class="col-md-6 bg-white rounded shadow-lg">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mx-5">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mx-5">
                <input type="submit" value="Create" class="btn btn-primary  my-4" />
                <a class="btn btn-primary  my-4" asp-action="Index">List of roles</a>
            </div>
        </form>
    </div>
</div>
<div class="mx-5 mb-4 content-information mt-5">
    <a asp-action="Index">
        <i class="far fa-arrow-alt-circle-left"></i>
        Back
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
